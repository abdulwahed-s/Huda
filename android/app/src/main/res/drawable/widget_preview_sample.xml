<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with Islamic green gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2E7D32"
                android:endColor="#4CAF50"
                android:angle="135" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- White overlay for text area -->
    <item android:top="12dp" android:bottom="12dp" android:left="12dp" android:right="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#F8F9FA" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Sample text representation (decorative lines) -->
    <item android:top="24dp" android:left="24dp" android:right="24dp" android:bottom="48dp">
        <shape android:shape="rectangle">
            <solid android:color="#2E7D32" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <item android:top="40dp" android:left="24dp" android:right="64dp" android:bottom="32dp">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <!-- Small decorative element (like a mosque icon placeholder) -->
    <item android:top="56dp" android:left="24dp" android:right="88dp" android:bottom="20dp">
        <shape android:shape="oval">
            <solid android:color="#81C784" />
        </shape>
    </item>
</layer-list>
